<Page
    x:Class="EstilosGenerales.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EstilosGenerales"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <SolidColorBrush x:Key="MiColor" Color="Violet"/>
    </Page.Resources>
    <Grid>
        <StackPanel Margin="30,30,0,0">
            <TextBlock Text="Nombre de la app"
                       FontSize="30"
                       Foreground="{StaticResource MiColor}"/>
            
            <TextBlock TextWrapping="Wrap"
                       FontSize="20"
                       Margin="0,20,0,0"
                       Text="En esta aplicación vamos a usar estilos para que todos los elementos aparezcan igual."/>
            <Button Content="Boton con estilo"
                    Margin="0,10,0,0"
                    Background="{StaticResource MiColor}"/>
        </StackPanel>

    </Grid>
</Page>
